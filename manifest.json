{
  "manifest_version": 3,
  "name": "lumawig",
  "description": "Word Enhancement Program for Filipino Language",
  "version": "0.0.1",
  "icons": {
    "16": "src/image/lumawig-16.png",
    "48": "src/image/lumawig-48.png",
    "128": "src/image/lumawig-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
   ],

   "commands": {
    "trigger": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Trigger the extension"
    }
  },
  
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "src/image/favicon.png"
  },
  "background": {
    "service_worker": "src/background.mjs",
    "type": "module"
  },

  "web_accessible_resources": [
    {
      "resources": [ "src/image/circle_icon.png" ],
      "matches": [ "https://*/*" ]
    }
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>", "https://facebook.com/*", "https://youtube.com/*"],
      "js": ["node_modules/webextension-polyfill/dist/browser-polyfill.min.js", "dist/bundle.js"],
      "run_at": "document_idle"
    }
  ]
  
 
}
